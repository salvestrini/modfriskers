required="diff"

. $testdir/defs || exit 1


# Building input files
mkdir files || exit 1

: >files/file.py || exit 1

cat >files/file.py <<EOF
import sys
from me import null
from gurus import *
EOF


# Building configuration file
: >file.af || exit 1

cat >file.af <<EOF
files-glob files/.*py

non-critical-internal me
non-critical-external sys[ \t]*.*
EOF


# Building expected file
: >file.exp || exit 1
cat >file.exp <<EOF
#
# Autogenerated file, DO NOT EDIT
#

#
# Files matching regexps:
#
#  files/file.py
#

AC_DEFUN([PYTHON_AUTOFRISK_CHECKS],[
    PYTHON_AUTOFRISK_MODULES([gurus],[],[
        AC_MSG_ERROR([cannot find python module gurus])
    ])
    #PYTHON_AUTOFRISK_MODULES([me],[],[])
    #PYTHON_AUTOFRISK_MODULES([sys],[],[])
])

AC_DEFUN([PYTHON_AUTOFRISK_SUMMARY],[
])
EOF


# Frisking
: >file.out || exit 1
$PYTHON_AUTOFRISK_NOFLAGS file.af


# Comparing expected output with produced one
diff file.exp file.af.m4 || exit 1

exit 0

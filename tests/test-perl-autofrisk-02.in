required="diff"

. $testdir/defs || exit 1


# Building input files
mkdir files || exit 1

: >files/file.pm || exit 1

cat >files/file.pm <<EOF
use diagnostics;
use Test::Test;
use you_have_to_catch_me;
use warnings;
EOF


# Building configuration file
: >file.af || exit 1

cat >file.af <<EOF
files-glob files/.*pm

non-critical-internal Test::.*

non-critical-external strict[ \t]*.*
non-critical-external diagnostics[ \t]*.*
non-critical-external warnings[ \t]*.*
non-critical-am-i sure
EOF


# Building expected file
: >file.exp || exit 1
cat >file.exp <<EOF
#
# Autogenerated file, DO NOT EDIT
#

#
# Files matching regexps:
#
#  files/file.pm
#

AC_DEFUN([PERL_AUTOFRISK_CHECKS],[
    #PERL_AUTOFRISK_MODULES([Test::Test],[],[])
    #PERL_AUTOFRISK_MODULES([diagnostics],[],[])
    #PERL_AUTOFRISK_MODULES([warnings],[],[])
    PERL_AUTOFRISK_MODULES([you_have_to_catch_me],[],[
        AC_MSG_ERROR([cannot find perl module you_have_to_catch_me])
    ])
])

AC_DEFUN([PERL_AUTOFRISK_SUMMARY],[
])
EOF


# Frisking
: >file.out || exit 1
$PERL_AUTOFRISK_NOFLAGS file.af || exit 1


# Comparing expected output with produced one
diff file.exp file.af.m4 || exit 1

exit 0
